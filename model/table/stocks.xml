<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : stocks.xml
    Description:
        Estructura de la tabla stocks.
-->
<tabla>
   <columna><nombre>disponible</nombre><tipo>double precision</tipo><nulo>NO</nulo></columna>
   <columna><nombre>idstock</nombre><tipo>serial</tipo><nulo>NO</nulo></columna>
   <columna><nombre>codalmacen</nombre><tipo>character varying(4)</tipo><nulo>NO</nulo></columna>
   <columna><nombre>reservada</nombre><tipo>double precision</tipo><nulo>NO</nulo></columna>
   <columna><nombre>cantidad</nombre><tipo>double precision</tipo><nulo>NO</nulo><defecto>0</defecto></columna>
   <columna><nombre>nombre</nombre><tipo>character varying(100)</tipo><nulo>YES</nulo></columna>
   <columna><nombre>pterecibir</nombre><tipo>double precision</tipo><nulo>NO</nulo></columna>
   <columna><nombre>referencia</nombre><tipo>character varying(18)</tipo><nulo>NO</nulo></columna>
   <restriccion><nombre>ca_stocks_articulos</nombre><consulta>FOREIGN KEY (referencia)
      REFERENCES articulos (referencia) MATCH SIMPLE
      ON UPDATE CASCADE ON DELETE CASCADE</consulta></restriccion>
   <restriccion><nombre>ca_stocks_almacenes</nombre><consulta>FOREIGN KEY (codalmacen)
      REFERENCES almacenes (codalmacen) MATCH SIMPLE
      ON UPDATE CASCADE ON DELETE RESTRICT</consulta></restriccion>
   <restriccion><nombre>uniq_stocks_almacen_referencia</nombre><consulta>UNIQUE (codalmacen, referencia)</consulta></restriccion>
   <restriccion><nombre>stocks_pkey</nombre><consulta>PRIMARY KEY (idstock)</consulta></restriccion>
</tabla>