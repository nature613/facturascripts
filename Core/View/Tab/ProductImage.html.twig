{% set firstView = fsc.views | first %}
{% set product = firstView.model %}
{% set currentView = fsc.getCurrentView() %}

<div class="container-fluid">
    {# -- New form -- #}
    <div class="row">
        <div class="col">
            <form id="{{ 'form' ~ currentView.getViewName() ~ '0' }}" action="{{ product.url() }}" method="post" enctype="multipart/form-data">
                <input type="hidden" name="activetab" value="{{ currentView.getViewName() }}" />
                <input type="hidden" name="action" value="add-file" />
                <input type="hidden" name="multireqtoken" value="{{ fsc.multiRequestProtection.newToken() }}"/>
                <input type="hidden" name="idproducto" value="{{ product.primaryColumnValue() }}">
                <div class="card border-success shadow mb-3">
                    <div class="card-body p-2">
                        <div class="form-row align-items-center">
                            <div class="form-group col-5 mr-3">
                                <label class="mb-0">{{ i18n.trans('variant') }}</label>
                                <select name="referencia" class="form-control" >
                                    <option value="">{{ i18n.trans('all') }}</option>
                                    {% for variant in product.getVariants() %}
                                        <option value="{{ variant.referencia }}">{{ variant.description() }}</option>
                                    {%  endfor %}
                                </select>
                            </div>
                            <div class="col">
                                {{ i18n.trans('select-plugin-zip-file') }}
                                <input type="file" name="newfiles[]" class="form-control-file" multiple="" accept="image/png, image/jpeg" required=""/>
                                <p class="text-muted mb-0">{{ i18n.trans('help-server-accepts-filesize', {'%size%': currentView.model.getMaxFileUpload()}) }}</p>
                            </div>
                            <div class="col-2">
                                <div class="text-right mr-2">
                                    <button type="submit" class="btn btn-sm btn-success">
                                        <i class="fas fa-save fa-fw" aria-hidden="true"></i> {{ i18n.trans('add') }}
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    {# -- Attached files -- #}
    <div class="row row-cols-1 row-cols-md-5">
        {% for counter, productImage in currentView.cursor %}        
            {% set formName = currentView.getViewName() ~ (counter + 1) %}
            {% set border = productImage.referencia ? '' : 'border-primary' %}
            <div class="col mb-4">
                <div class="card {{ border }} shadow h-100">
                    <img src="{{ asset(productImage.getUrlDownload()) }}" class="card-img-top" alt="{{ productImage.referencia }}" loading="lazy">
                    <div class="card-body">
                    </div>
                    <div class="card-footer pb-2">
                        <form id="{{ 'form' ~ formName }}" action="{{ product.url() }}" method="post" enctype="multipart/form-data">
                            <input type="hidden" name="activetab" value="{{ currentView.getViewName() }}" />
                            <input type="hidden" name="idproducto" value="{{ productImage.idproducto }}" />
                            <input type="hidden" name="idimage" value="{{ productImage.idimage }}" />
                            <input type="hidden" name="action" value=""/>
                            <input type="hidden" name="multireqtoken" value="{{ fsc.multiRequestProtection.newToken() }}"/>            
                            <div class="form-row">
                                <div class="col">
                                    <i class="fas fa-arrows-alt fa-fw mr-2 text-info" aria-hidden="true"></i>
                                    <span class="text-muted">{{ productImage.referencia }}</span>
                                </div>
                                <div class="col-2">
                                    {{ _self.buttonDelete(formName, i18n) }}
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{% macro buttonDelete(formName, i18n) %}
    {% set label = i18n.trans('delete-file') %}
    {% set text = i18n.trans('are-you-sure') %}
    {% set cancel = i18n.trans('cancel') %}
    {% set confirm = i18n.trans('confirm') %}
    <button type="button" class="btn btn-sm btn-outline-danger p-1"
            onclick="confirmAction('{{ formName }}','delete-file','{{ label }}','{{ text }}','{{ cancel }}','{{ confirm }}');">
        <i class="fas fa-trash-alt fa-fw" aria-hidden="true"></i>
    </button>
{% endmacro %}
