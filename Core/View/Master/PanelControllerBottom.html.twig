{% extends "Master/PanelController.html.twig" %}

{% block css %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block bodyHeaderOptions %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container-fluid">
        <div class="row">
            {# -- Left Panel -- #}
            {% if fsc.views | length > 1 %}
                <div class="col-sm-2 d-none d-lg-inline-block">
                    <div class="nav flex-column nav-pills" id="mainTabs" role="tablist">
                        {% for indexView, view in fsc.views %}
                            {% set active = (indexView == fsc.active) ? ' active' : '' %}
                            <a class="nav-link{{ active }}" id="{{ indexView }}-tab" data-toggle="pill" href="#{{ indexView }}" role="tab" aria-controls="{{ indexView }}" aria-expanded="true">
                                {% if view.count > 1 %}<span class='badge badge-secondary float-right'>{{ view.count }}</span>{% endif %}
                                <i class="fas {{ view.icon }} fa-fw d-none d-xl-inline-block" aria-hidden="true"></i> {{ view.title }}
                            </a>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            {# -- Right Panel -- #}
            <div class="col">
                <div class="nav nav-tabs d-lg-none" role="tablist">
                    {% for indexView, view in fsc.views %}
                        {% set active = (indexView == fsc.active) ? ' active' : '' %}
                        <a class="nav-link{{ active }}" id="{{ indexView }}-tab2" data-toggle="pill" href="#{{ indexView }}" role="tab" aria-controls="{{ indexView }}" aria-expanded="true">
                            {% if view.count > 1 %}<span class='badge badge-secondary float-right'>{{ view.count }}</span>{% endif %}
                            <i class="fas {{ view.icon }} fa-fw" aria-hidden="true"></i>
                        </a>
                    {% endfor %}
                </div>
                <div class="tab-content" id="mainTabsContent">
                    {% for indexView, view in fsc.views %}
                        {% set active = (indexView == fsc.active) ? ' show active' : '' %}
                        <div class="tab-pane fade{{ active }}" id="{{ indexView }}" role="tabpanel" aria-labelledby="{{ indexView }}-tab">
                            {{ include(view.template) }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
