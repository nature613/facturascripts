<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : attached_files.xml
    Author     : Francesc Pineda Segarra
    Description:
        Structure for the attached_files table.
-->
<table>
    <column>
        <name>id</name>
        <type>serial</type>
        <null>NO</null>
        <default>nextval('attached_files_id_seq'::regclass)</default>
    </column>
    <column>
        <name>filename</name>
        <type>character varying(64)</type>
        <null>NO</null>
    </column>
    <column>
        <name>path</name>
        <type>character varying(100)</type>
        <null>NO</null>
    </column>
    <column>
        <name>size</name>
        <type>integer</type>
        <null>NO</null>
    </column>
    <column>
        <name>uploadedat</name>
        <type>timestamp</type>
        <null>NO</null>
    </column>
    <column>
        <name>mimetype</name>
        <type>character varying(100)</type>
        <null>NO</null>
    </column>
    <column>
        <name>hash</name>
        <type>character varying(40)</type>
        <null>NO</null>
    </column>
    <constraint>
        <name>attached_files_pkey</name>
        <type>PRIMARY KEY (id)</type>
    </constraint>
    <constraint>
        <name>uniq_path_attachedfiles</name>
        <type>UNIQUE (path)</type>
    </constraint>
</table>