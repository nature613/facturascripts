<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : lineastransstock.xml
    Author     : Carlos Garcia Gomez
    Description:
        Estructura de la tabla lineastransstock.
-->
<table>
    <column>
        <name>cantidad</name>
        <type>double precision</type>
        <null>NO</null>
    </column>
    <column>
        <name>descripcion</name>
        <type>text</type>
        <null>YES</null>
    </column>
    <column>
        <name>idlinea</name>
        <type>serial</type>
        <null>NO</null>
        <default>nextval('lineastransstock_idlinea_seq'::regclass)</default>
    </column>
    <column>
        <name>idtrans</name>
        <type>integer</type>
        <null>NO</null>
    </column>
    <column>
        <name>referencia</name>
        <type>character varying(18)</type>
        <null>NO</null>
    </column>
    <indexes>
        <name>lineastransstock_pkey</name>
        <constraint>PRIMARY KEY (idlinea)</constraint>
    </indexes>
    <indexes>
        <name>ca_linea_transstock</name>
        <constraint>FOREIGN KEY (idtrans)
            REFERENCES transstock (idtrans)
            ON DELETE CASCADE ON UPDATE CASCADE</constraint>
    </indexes>
    <indexes>
        <name>ca_linea_transstock_articulos</name>
        <constraint>FOREIGN KEY (referencia)
            REFERENCES articulos (referencia)
            ON DELETE CASCADE ON UPDATE CASCADE</constraint>
    </indexes>
    <indexes>
        <name>uniq_referencia_transferencia</name>
        <constraint>UNIQUE (idtrans,referencia)</constraint>
    </indexes>
</table>