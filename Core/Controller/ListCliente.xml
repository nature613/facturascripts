<view>
    <columns>
        <column title="Código" display="left" description="Nombre por el que se conoce al cliente. Para uso interno." order="100">
            <widget type="text" fieldname="codcliente" onclick="EditCliente" />
        </column>
        <column title="Nombre" display="left" description="Nombre oficial del cliente, para las facturas y otros documentos." order="110">
            <widget type="text" fieldname="nombre" />
        </column>
        <column title="Razón Social" display="left" order="120">
            <widget type="text" fieldname="razonsocial" />
        </column>
        <column title="CIF/NIF" display="left" order="130">
            <widget type="text" fieldname="cifnif" />
        </column>
        <column title="eMail" display="left" order="140">
            <widget type="text" fieldname="email" />
        </column>
        <column title="Telefono" display="left" order="150">
            <widget type="text" fieldname="telefono1" />
        </column>
        <column title="Telefono2" display="none" order="160">
            <widget type="text" fieldname="telefono2" />
        </column>
        <column title="Observaciones" display="left" order="170">
            <widget type="text" fieldname="observaciones" />
        </column>
        <column title="Grupo" display="left" order="175">
            <widget type="text" fieldname="codgrupo" onclick="EditGrupoCliente" />
        </column>
        <column title="De baja" display="none" order="180">
            <widget type="checkbox" fieldname="debaja" />
        </column>
        <column title="Fec. Alta" display="none" order="185">
            <widget type="text" fieldname="fechaalta" />
        </column>
        <column title="Fec. Alta" display="none" order="190">
            <widget type="text" fieldname="fechabaja" />
        </column>
    </columns>
</view>
