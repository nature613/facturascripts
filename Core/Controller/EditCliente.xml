<view>
    <columns>
        <group>
            <column title="Código" display="left" numcolumns="3" order="100">                
                <widget type="text" fieldname="codcliente" onclick="" icon="fa-user" required="true" />
            </column>
            
            <column title="Id. fiscal" display="left" numcolumns="3" order="110">
                <widget type="select" fieldname="tipoidfiscal" icon="fa-truck" required="true">
                    <values title="CIF/NIF">CIF/NIF</values>
                    <values title="Pasaporte">PASAPORTE</values>
                    <values title="DNI">DNI</values>
                    <values title="NIF">NIF</values>
                    <values title="CIF">CIF</values>
                    <values title="VAT">VAT</values>
                    <values title="CUIT">CUIT</values>
                </widget>
            </column>
            
            <column title="CIF/NIF" display="left" numcolumns="3" order="120">
                <widget type="text" fieldname="cifnif" required="true" />
            </column>
                                    
            <column title="Grupo" display="left" numcolumns="3" order="175">
                <widget type="select" fieldname="codgrupo">
                    <values source="gruposclientes" fieldcode="codgrupo" fieldtitle="nombre"></values>
                </widget>
            </column>
        </group>
        
        <group>        
            <column title="Nombre" display="left" numcolumns="6" order="110"
                    description="Nombre por el que se conoce al cliente. Para uso interno.">
                <widget type="text" fieldname="nombre" required="true" />
            </column>
            <column title="Razón Social" display="left" numcolumns="6" order="120"
                    description="Nombre oficial del cliente, para las facturas y otros documentos.">
                <widget type="text" fieldname="razonsocial" />
            </column>
        </group>        
        
        <group numcolumns="6" title="Datos de contacto">
            <column title="Telefono" display="left" numcolumns="4" order="140">
                <widget type="text" fieldname="telefono1" />
            </column>
            
            <column title="Telefono2" display="left" numcolumns="4" order="150">
                <widget type="text" fieldname="telefono2" />
            </column>
            
            <column title="Fax" display="left" numcolumns="4" order="155">
                <widget type="text" fieldname="fax" />
            </column>
        </group>        

        <group numcolumns="6" title="Otros datos">
            <column title="Fec. Alta" display="left" numcolumns="4" order="80">
                <widget type="datepicker" fieldname="fechaalta" />
            </column>

            <column title="Fec. Baja" display="left" numcolumns="4" order="90">
                <widget type="datepicker" fieldname="fechabaja" />
            </column>

            <column title="De baja" display="left" numcolumns="4" order="100">
                <widget type="checkbox" fieldname="debaja" />
            </column>
        </group>
                        
        <group numcolumns="6">        
            <column title="eMail" display="left" order="150">
                <widget type="text" fieldname="email" />
            </column>

            <column title="Web" display="left" order="160">
                <widget type="text" fieldname="web" />
            </column>
        </group>                        

        <group numcolumns="6">
            <column title="Observaciones" display="left" order="170">
                <widget type="textarea" fieldname="observaciones" />
            </column>
        </group>                        
    </columns>    
</view>

