<view>
    <columns>
        <column name="id" display="none" order="90">
            <widget type="text" fieldname="idlinea" />
        </column>
        <column name="delivery-note" order="100">
            <widget type="select" fieldname="idalbaran" onclick="EditAlbaranCliente">
                <values source="albaranescli" fieldcode="idalbaran" fieldtitle="codigo"></values>
            </widget>
        </column>
        <column name="order-code" order="110">
            <widget type="select" fieldname="idpedido" onclick="EditPedidoCliente">
                <values source="pedidoscli" fieldcode="idpedido" fieldtitle="codigo"></values>
            </widget>
        </column>
        <column name="line-order" order="120">
            <widget type="number" fieldname="orden" />
        </column>
        <column name="quantity" order="130" display="right">
            <widget type="text" fieldname="cantidad" />
        </column>
        <column name="reference" order="140">
            <widget type="text" fieldname="referencia" onclick="EditArticulo" />
        </column>
        <column name="combination-code" order="150">
            <widget type="text" fieldname="codcombinacion" />
        </column>
        <column name="description" order="160">
            <widget type="text" fieldname="descripcion" />
        </column>
        <column name="lineal-discount" order="170" display="right">
            <widget type="number" fieldname="dtolineal" />
        </column>
        <column name="discount" order="180" display="right">
            <widget type="number" fieldname="dtopor" />
        </column>
        <column name="irpf" order="190" display="right">
            <widget type="number" fieldname="irpf" />
        </column>
        <column name="%-surcharge" order="200" display="right">
            <widget type="number" fieldname="recargo" />
        </column>
        <column name="%-commission" order="210" display="right">
            <widget type="number" fieldname="porcomision" />
        </column>
        <column name="pvp" order="220" display="right">
            <widget type="money" fieldname="pvpunitario" />
        </column>
        <column name="pvp-without-discount" order="230" display="right">
            <widget type="money" fieldname="pvpsindto" />
        </column>
        <column name="pvp-total" order="240" display="right">
            <widget type="money" fieldname="pvptotal" />
        </column>
        <column name="tax" order="250">
            <widget type="select" fieldname="codimpuesto" onclick="EditImpuesto">
                <values source="impuestos" fieldcode="codimpuesto" fieldtitle="descripcion"></values>
            </widget>
        </column>
        <column name="show-quantity" order="260">
            <widget type="checkbox" fieldname="mostrar_cantidad" />
        </column>
        <column name="show-price" order="270">
            <widget type="checkbox" fieldname="mostrar_precio" />
        </column>
    </columns>
</view>