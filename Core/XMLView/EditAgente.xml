<view>
    <columns>
        <group numcolums="12" title="Datos agente">
            <column title="Código" numcolums="2" order="100">
                <widget type="text" fieldname="codagente" onclick="" icon="fa-user" required="true" />
            </column>
            <column title="Nombre" numcolumns="3" order="110"
                    description="Nombre del Agente">
                <widget type="text" fieldname="nombre" required="true" hint="Nombre del Agente" />
            </column>
            
            <column title="Apellidos" numcolumns="4" order="120"
                    description="Apellidos del agente">
                <widget type="text" fieldname="apellidos" hint="Apellidos del agente" />
            </column>
            
            
            <column title="CIF/NIF" numcolumns="2" order="140">
                <widget type="text" fieldname="dnicif" required="true" />
            </column>   
        </group>
        <group title="Dirección y Datos de contacto" numcolumns="12">
            <column title="Dirección" numcolumns="4" order="100">
                <widget type="text" fieldname="direccion" />
            </column>
            <column title="CP" numcolumns="2" order="110">
                <widget type="text" fieldname="codpostal" />
            </column>
            <column title="Población" numcolumns="3" order="110">
                <widget type="text" fieldname="ciudad" />
            </column>
            <column title="Provincia" numcolumns="3" order="120">
                <widget type="text" fieldname="provincia" />
            </column>
            <column title="Teléfono" numcolumns="2" order="130">
                <widget type="text" fieldname="telefono" />
            </column>
            <column title="Correo electrónico" numcolumns="2" order="140">
                <widget type="text" fieldname="email" />
            </column>
        </group>
        <group title="Datos profesionales" numcolums="12">
            <column title="Cargo" numcolumns="2" order="100">
                <widget type="text" fieldname="Cargo" />
            </column>
            <column title="Comisión" numcolumns="1" order="110">
                <widget type="number" step="any" min="0" max="99"  fieldname="porcomision" />
            </column>
            <column title="Nº Seguridad Social" numcolumns="2" order="120">
                <widget type="text" fieldname="seg_social" />
            </column>
            <column title="Cuenta Bancaria" numcolumns="3" order="130">
                <widget type="text" fieldname="banco" />
            </column>
            <column title="Fecha Nacimiento" numcolumns="2" order="130">
                <widget type="date" fieldname="f_nacimiento" />
            </column>
            
            
        </group>
    </columns>
</view>
