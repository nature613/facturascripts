<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="code" numcolumns="2" order="100">
                <widget type="text" fieldname="codagente" icon="fas fa-hashtag" maxlength="10" readonly="dinamic" required="true"/>
            </column>
            <column name="name" numcolumns="5" order="110">
                <widget type="text" fieldname="nombre" required="true" />
            </column>
            <column name="fiscal-id" titleurl="ListIdentificadorFiscal" numcolumns="2" order="120">
                <widget type="select" fieldname="tipoidfiscal" required="true">
                    <values source="idsfiscales" fieldcode="tipoidfiscal" fieldtitle="tipoidfiscal"></values>
                </widget>
            </column>
            <column name="fiscal-number" numcolumns="3" order="130">
                <widget type="text" fieldname="cifnif" icon="fas fa-id-card" />
            </column>
            <column name="position" numcolumns="4" order="140">
                <widget type="text" fieldname="cargo" />
            </column>
        </group>
        <group name="contact" title="contact-info" numcolumns="7">
            <column name="contact" numcolumns="4" order="100">
                <widget type="select" fieldname="idcontacto" onclick="EditContacto">
                    <values></values>
                </widget>
            </column>
            <column name="address" numcolumns="8" order="110">
                <widget type="text" fieldname="direccion" icon="fas fa-map-marked" readonly="true" />
            </column>
            <column name="postalcode" numcolumns="3" order="120">
                <widget type="text" fieldname="codpostal" readonly="true" />
            </column>
            <column name="city" numcolumns="4" order="130">
                <widget type="text" fieldname="ciudad" readonly="true" />
            </column>
            <column name="province" numcolumns="5" order="140">
                <widget type="text" fieldname="provincia" readonly="true" />
            </column>
        </group>
        <group name="phones" title="&#160;" numcolumns="5">
            <column name="phone" numcolumns="6" order="150">
                <widget type="text" fieldname="telefono1" icon="fas fa-phone" />
            </column>
            <column name="phone2" numcolumns="6" order="160">
                <widget type="text" fieldname="telefono2" icon="fas fa-mobile-alt" />
            </column>
            <column name="email" numcolumns="12" order="170">
                <widget type="text" fieldname="email" icon="fas fa-at" />
            </column>
        </group>
        <group name="other" title="other-data" numcolumns="5">
            <column name="create-date" numcolumns="6" order="110">
                <widget type="date" fieldname="fechaalta" readonly="true" />
            </column>
            <column name="date-of-suspension" numcolumns="6" order="120">
                <widget type="date" fieldname="fechabaja" />
            </column>
        </group>
        <group name="notes" title="&#160;" numcolumns="7">
            <column name="observations" order="100">
                <widget type="textarea" fieldname="observaciones" />
            </column>
        </group>
    </columns>
</view>
