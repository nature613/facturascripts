<view>
    <columns>
        <column title="Referencia" display="left" order="100">
            <widget type="text" fieldname="referencia" onclick="EditArticulo" />
        </column>
        <column title="Descripción" display="left" order="110">
            <widget type="text" fieldname="descripcion" />
        </column>
        <column title="Partnumber" display="left" order="120">
            <widget type="text" fieldname="partnumber" />
        </column>
        <column title="Fabricante" display="left" order="130">
            <widget type="text" fieldname="codfabricante" />
        </column>
        <column title="Familia" display="left" order="140">
            <widget type="text" fieldname="codfamilia" />
        </column>
        <column title="PVP" display="left" order="150">
            <widget type="text" fieldname="pvp" />
        </column>
        <column title="Stock" display="right" order="160">
            <widget type="number" fieldname="stockfis" />
        </column>
    </columns>
</view>
