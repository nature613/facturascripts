<view>
    <columns>
        <column name="code" order="100">
            <widget type="text" fieldname="idliquidacion" />
        </column>
        <column name="company" order="110">
            <widget type="text" fieldname="company" />
        </column>
        <column name="exercise" order="120">
            <widget type="text" fieldname="idexercise" />
        </column>
        <column name="date" order="130">
            <widget type="date" fieldname="creationdate" />
        </column>
        <column name="agent" order="140">
            <widget type="text" fieldname="agent" />
        </column>
        <column name="invoice" order="150">
            <widget type="text" fieldname="invoicenumber" />
        </column>
        <column name="invoice-date" display="none" order="160">
            <widget type="date" fieldname="invoicedate" />
        </column>
        <column name="total" display="right" numcolumns="2" order="170">
            <widget type="money" fieldname="total">
                <option color="danger">&lt;0</option>
                <option color="dark">0</option>
            </widget>
        </column>
        <column name="notes" display="none" order="180">
            <widget type="text" fieldname="note" />
        </column>
    </columns>
</view>