<view>
    <columns>
        <column name="code" order="100">
            <widget type="text" fieldname="idliquidacion" />
        </column>
        <column name="company" order="110">
            <widget type="text" fieldname="empresa" />
        </column>
        <column name="exercise" order="120">
            <widget type="text" fieldname="ejercicio" />
        </column>
        <column name="date" order="130">
            <widget type="date" fieldname="fecha" />
        </column>
        <column name="agent" order="140">
            <widget type="text" fieldname="codagente" />
        </column>
        <column name="invoice" order="150">
            <widget type="autocomplete" fieldname="idfactura" onclick="EditFacturaCliente">
                <values source="facturascli" fieldcode="idfactura" fieldtitle="codigo"></values>
            </widget>
        </column>
        <column name="invoice-date" display="none" order="160">
            <widget type="date" fieldname="fechafactura" />
        </column>
        <column name="total" display="right" numcolumns="2" order="170">
            <widget type="money" fieldname="total">
                <option color="danger">gt:0</option>
                <option color="dark">0</option>
            </widget>
        </column>
        <column name="notes" display="none" order="180">
            <widget type="text" fieldname="observaciones" />
        </column>
    </columns>
</view>