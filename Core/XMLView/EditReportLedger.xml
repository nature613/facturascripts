<view>
    <columns>
        <group name="basic" numcolumns="12">
            <column name="code" display="none" order="100">
                <widget type="text" fieldname="id" />
            </column>
            <column name="name" order="110">
                <widget type="text" fieldname="name" />
            </column>
            <column name="company" numcolumns="2" order="120">
                <widget type="select" fieldname="idcompany">
                    <values source="empresas" fieldcode="idempresa" fieldtitle="nombrecorto"></values>
                </widget>
            </column>
            <column name="channel" numcolumns="2" order="130">
                <widget type="number" fieldname="channel" decimal="0"/>
            </column>
        </group>
        <group name="date" numcolumns="4">
            <column name="start-date" order="200">
                <widget type="date" fieldname="startdate" />
            </column>
            <column name="end-date" order="210">
                <widget type="date" fieldname="enddate" />
            </column>
        </group>
        <group name="other" numcolumns="8">
            <column name="start-subaccount" order="300">
                <widget type="autocomplete" fieldname="startcodsubaccount">
                    <values source="subcuentas" fieldcode="codsubcuenta" fieldtitle="descripcion"></values>
                </widget>
            </column>
            <column name="end-subaccount" order="310">
                <widget type="autocomplete" fieldname="endcodsubaccount">
                    <values source="subcuentas" fieldcode="codsubcuenta" fieldtitle="descripcion"></values>
                </widget>
            </column>
            <column name="start-accounting-entry" numcolumns="2" order="320">
                <widget type="number" fieldname="startentry" decimal="0" />
            </column>
            <column name="end-accounting-entry" numcolumns="2" order="330">
                <widget type="number" fieldname="endentry" decimal="0" />
            </column>
        </group>
    </columns>
</view>
