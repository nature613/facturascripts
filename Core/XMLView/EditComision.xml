<view>
    <columns>
        <group name="data" numcolumns="10" title="conditions" icon="fas fa-filter">
            <column name="idcomision" display="none" order="100">
                <widget type="text" fieldname="id" />
            </column>
            <column name="company" order="100">
                <widget type="select" fieldname="idempresa" >
                    <values source="empresas" fieldcode="idempresa" fieldtitle="nombre"></values>
                </widget>
            </column>
            <column name="agent" numcolumns="6" order="200">
                <widget type="autocomplete" fieldname="codagente">
                    <values source="agentes" fieldcode="codagente" fieldtitle="nombre"></values>
                </widget>
            </column>
            <column name="customer" numcolumns="6" order="250">
                <widget type="autocomplete" fieldname="codcliente">
                    <values source="clientes" fieldcode="codcliente" fieldtitle="nombre"></values>
                </widget>
            </column>
            <column name="family" numcolumns="6" order="300">
                <widget type="autocomplete" fieldname="codfamilia">
                    <values source="familias" fieldcode="codfamilia" fieldtitle="descripcion"></values>
                </widget>
            </column>
            <column name="product" numcolumns="6" order="350">
                <widget type="autocomplete" fieldname="idproducto">
                    <values source="productos" fieldcode="idproducto" fieldtitle="referencia"></values>
                </widget>
            </column>
        </group>
        <group name="value" numcolumns="2" title="value" icon="fas fa-percentage">
            <column name="percentage" order="100">
                <widget type="number" decimal="2" min="0.01" max="100.00" step="0.01" fieldname="porcentaje" />
            </column>
        </group>
    </columns>
    <rows>
        <row type="actions">
            <button type="js" label='help' color="primary" action="$('#help-card').toggle()" icon="fas fa-question-circle" />
        </row>
        <row type="footer">
            <group name="help" id="help-card" class="collapse" html="Block/CommissionInfo.html.twig"></group>
        </row>
    </rows>
</view>