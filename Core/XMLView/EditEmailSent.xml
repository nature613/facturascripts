<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="code " numcolumns="2" order="100" readonly = "True">
                <widget type="text" fieldname="id" icon="fas fa-at" required="true" />
            </column>
            <column name="date" numcolumns="4" order="110">
                <widget type="date" fieldname="date" required="true" readonly="true" />
            </column>
            <column name="user" numcolumns="2" order="130">
                <widget type="text" fieldname="nick" required="true" readonly="true" />
            </column>
            </group>
            <group name="content" numcolumns = "12"> 
                 <column name="addressee" numcolumns="12" order="120">
                <widget type="text" fieldname="addressee" required="true" readonly="true" />
            </column>
            <column name="subject" numcolumns="12" order="120">
                <widget type="text" fieldname="level" required="true" readonly="true" />
            </column>
           
            <column name="message" numcolumns="12" order="150">
                <widget type="textarea" fieldname="text" required="true" readonly="true" />
            </column>
        </group>
    </columns>
</view>