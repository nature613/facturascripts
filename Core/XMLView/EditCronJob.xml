<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="id" numcolumns="2" order="100">
                <widget type="text" fieldname="id" icon="fas fa-retweet" readonly="true" />
            </column>
            <column name="pluginname" numcolumns="2" order="110">
                <widget type="text" fieldname="pluginname" icon="fas fa-hashtag" readonly="true"/>
            </column>
            <column name="jobname" numcolumns="4" order="120">
                <widget type="text" fieldname="jobname"  readonly="true" />
            </column>
            <column name="date" numcolumns="2" order="130">
                <widget type="date" fieldname="date"  readonly="true"  />
            </column>
            <column name="done" numcolumns="2" order="140">
                <widget type="checkbox" fieldname="done"  readonly="true" />
            </column>

        </group>
    </columns>
</view>