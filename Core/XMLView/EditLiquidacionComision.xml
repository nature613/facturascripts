<view>
    <columns>
        <group name="data" numcolumns="7" >
            <column name="exercise" numcolumns="3" order="110">
                <widget type="select" fieldname="codejercicio" required="true">
                    <values source="ejercicios" fieldcode="codejercicio" fieldtitle="nombre"></values>
                </widget>
            </column>
            <column name="total" numcolumns="4" order="120">
                <widget type="money" fieldname="total" readonly="true"/>
            </column>
            <column name="invoice" title="generated-invoice" numcolumns="4" order="130">
                <widget type="autocomplete" fieldname="idfactura" readonly="true">
                    <values source="facturasprov" fieldcode="idfactura" fieldtitle="codigo"></values>
                </widget>
            </column>
            <column name="agent" numcolumns="7" order="200">
                <widget type="autocomplete" fieldname="codagente" required="true">
                    <values source="agentes" fieldcode="codagente" fieldtitle="nombre"></values>
                </widget>
            </column>
            <column name="date" numcolumns="4" order="210">
                <widget type="date" fieldname="fecha" icon="fas fa-calendar" required="true"/>
            </column>
        </group>
        <group name="note" numcolumns="5" >
            <column name="notes" order="100">
                <widget type="textarea" fieldname="observaciones" rows="4"/>
            </column>
        </group>
    </columns>
</view>
