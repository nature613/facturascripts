<view>
    <columns>
        <group name="numericformat" numcolumns="12">
            <column name="decimals" numcolumns="2" order="100">
                <widget type="number" fieldname="decimals" required="true" />
            </column>
            
            <column name="product_decimals" numcolumns="2" order="110">
                <widget type="number" fieldname="product_decimals" required="true" />
            </column>

            <column name="decimal_separator" numcolumns="2" order="120">
                <widget type="text" fieldname="decimal_separator" required="true" />
            </column>

            <column name="thousands_separator" numcolumns="2" order="120">
                <widget type="text" fieldname="thousands_separator" required="true" />
            </column>
        </group>

        <group name="dateformat" numcolumns="12">
            <column name="short" numcolumns="4" order="100">
                <widget type="text" fieldname="short" required="true" />
            </column>

            <column name="long" numcolumns="4" order="100">
                <widget type="text" fieldname="long" required="true" />
            </column>

            <column name="maxtoday" numcolumns="4" order="100">
                <widget type="number" fieldname="maxtoday" required="true" />
            </column>
    </columns>
</view>
